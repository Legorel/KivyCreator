<TextInputPopup>:
  text_input: text_input
  title_align: "center"
  title_size: "18sp"
  size_hint: 0.6, 0.25

  GridLayout:
    cols: 1
    TextInput:
      id: text_input
      font_size: "24sp"
      height: "42sp"
      multiline: False

    GridLayout:
      rows: 1
      Button:
        text: "Confirm"
        on_release:
          root.input = root.text_input.text
          root.dismiss() if root.input != "" else None
      Button:
        text: "Cancel"
        on_release:
          root.dismiss()
